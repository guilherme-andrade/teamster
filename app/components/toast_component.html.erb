<div class="toast<%= classes %> show" role="alert" aria-live="assertive" aria-atomic="true">
  <% if title %>
    <div class="toast-header">
      <strong class="mr-auto">
        <%= title %>
      </strong>
      <small class="text-muted">
        <%= time %>
      </small>
      <button type="button" class="close" data-dismiss="toast" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
  <div class="toast-body">
    <%= content %>

    <% unless title %>
      <button type="button" class="close" data-dismiss="toast" aria-label="Close"></button>
    <% end %>
  </div>
</div>
