<p id="notice"><%= notice %></p>

<h1>Recipients</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Mobile phone country</th>
      <th>Mobile number</th>
      <th>Home address</th>
      <th>Work address</th>
      <th>Nationality country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipients.each do |recipient| %>
      <tr>
        <td><%= recipient.first_name %></td>
        <td><%= recipient.last_name %></td>
        <td><%= recipient.mobile_phone_country_id %></td>
        <td><%= recipient.mobile_number %></td>
        <td><%= recipient.home_address_id %></td>
        <td><%= recipient.work_address_id %></td>
        <td><%= recipient.nationality_country_id %></td>
        <td><%= link_to 'Show', recipient %></td>
        <td><%= link_to 'Edit', edit_recipient_path(recipient) %></td>
        <td><%= link_to 'Destroy', recipient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

